{
  "Unity 项目": {
    "extensions": [ ".cs", ".lua", ".shader", ".unity", ".prefab", ".asset" ],
    "excludeDirs": [ "Library", "Temp", "Logs", "Obj", ".vs", ".git" ]
  },
  "微信小程序": {
    "extensions": [ ".wxml", ".js", ".wxss", ".json", ".wxs" ],
    "excludeDirs": [ "node_modules", "miniprogram_npm", ".git" ]
  },
  "Python 项目": {
    "extensions": [ ".py", ".pyw" ],
    "excludeDirs": [ "venv", ".venv", "__pycache__", ".git", ".idea" ]
  },
  "Web 前端项目": {
    "extensions": [ ".html", ".css", ".js", ".ts", ".vue", ".jsx", ".tsx" ],
    "excludeDirs": [ "node_modules", "dist", ".git", ".idea" ]
  }
}